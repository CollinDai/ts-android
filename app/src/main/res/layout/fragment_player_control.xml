<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <Button
        android:id="@+id/hidden_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/skip_buttons"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:id="@+id/skip_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/previous_sub_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/prev_sub"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:src="@drawable/ic_skip_previous_white_24dp" />

        <ImageButton
            android:id="@+id/next_sub_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/next_sub"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:src="@drawable/ic_skip_next_white_24dp" />
    </LinearLayout>

</RelativeLayout>